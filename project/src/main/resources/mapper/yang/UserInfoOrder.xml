<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ticket.UserInfo.bean.OrderMapper">

    <resultMap id="orderResultMapper" type="com.ticket.UserInfo.bean.Order">
        <id column="id" property="id" javaType="java.lang.Integer"/>
        <result column="cinema_id" property="cinemaId" javaType="java.lang.Integer"/>
        <result column="seat_id" property="seatId" javaType="java.lang.Integer"/>
        <result column="film_id" property="filmId" javaType="java.lang.Integer"/>
        <result column="ticket_num" property="ticketNum" javaType="java.lang.Integer"/>
        <result column="price" property="price" javaType="java.lang.Double"/>
        <result column="total_price" property="totalPrice" javaType="java.lang.Double"/>
        <result column="order_time" property="orderTime" javaType="java.util.Date"/>
        <result column="cost_state" property="costState" javaType="java.lang.Integer"/>
        <result column="user_id" property="userId" javaType="java.lang.Integer"/>
        <result column="platoon_id" property="platoonId" javaType="java.lang.Integer"/>


       <result column="film_name" property="filmName" javaType="java.lang.String"/>
        <result column="cinema_name" property="cinemaName" javaType="java.lang.String"/>
        <!--电影场次-->
        <result column="show_start_time" property="movieField" javaType="java.lang.String"/>
        <result column="tel" property="tel" javaType="java.lang.String"/>
        <result column="film_img" property="filmImg" javaType="java.lang.String"/>
    </resultMap>


<!--根据支付状态查询订单-->
    <select id="selectUserOrder" resultMap="orderResultMapper">
        select * from f_order o
	join user u
	join platoon p
	join film f
	join seat s
	join cinema c
	on o.user_id=u.id
	and o.platoon_id=p.id
	and o.film_id=f.id
	and o.seat_id=s.id
	and o.cinema_id=c.id
	and o.cost_state=#{costState};
    </select>

    <!--查询历史订单-->
    <select id="selectHistoryOrder" resultMap="orderResultMapper">
        select * from f_order o
        join user u
        join platoon p
        join film f
        join seat s
        join cinema c
        on o.user_id=u.id
        and o.platoon_id=p.id
        and o.film_id=f.id
        and o.seat_id=s.id
        and o.cinema_id=c.id
        and p.show_start_time &lt; #{nowtime};
    </select>

    <!--显示未支付的订单数量-->
    <select id="selectNumberofUnpay" resultType="java.lang.Integer">
        select count(1) from f_order where cost_state=#{costState};
    </select>


    <!--删除未支付订单-->
    <delete id="deleteOrderById" parameterType="com.ticket.UserInfo.bean.Order">
        delete from f_order where id=#{id}
    </delete>
</mapper>